<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?><html xmlns:aatams="http://www.imos.org.au/aatams"
      xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:wfs="http://www.opengis.net/wfs"
      xmlns:ogc="http://www.opengis.net/ogc"
      xmlns:ows="http://www.opengis.net/ows"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:gml="http://www.opengis.net/gml">
   <head>
      <title>AATAMS Web Interface</title>
      <link href="aatams.css" rel="stylesheet" type="text/css"/>
      <xf:model id="model1">
         <xf:instance id="inst_data">
            <wfs:Transaction version="1.1.0" service="WFS">
               <wfs:Insert>
                  <wfs:FeatureCollection>
                     <gml:featureMember>
                        <aatams:animal>
                           <aatams:classification_ref>
                              <aatams:classification/>
                           </aatams:classification_ref>
                           <aatams:name/>
                           <aatams:display_level/>
                           <aatams:display_start_date/>
                           <aatams:comments/>
                        </aatams:animal>
                     </gml:featureMember>
                  </wfs:FeatureCollection>
               </wfs:Insert>
            </wfs:Transaction>
         </xf:instance>
         <xf:instance id="inst_subfeatures">
            <data xmlns="">
               <classification_id/>
            </data>
         </xf:instance>
         <xf:instance id="inst_classification"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:classification"/>
         <xf:instance id="inst_response">
            <dummy xmlns="">
               <ows:Exception/>
               <wfs:TransactionResponse>
                  <wfs:InsertResults>
                     <wfs:Feature>
                        <ogc:FeatureId/>
                     </wfs:Feature>
                  </wfs:InsertResults>
               </wfs:TransactionResponse>
            </dummy>
         </xf:instance>
         <xf:bind id="classification" nodeset="instance('inst_subfeatures')//classification_id"
                  type="xsd:string"
                  required="true()"/>
         <xf:bind id="name" nodeset="instance('inst_data')//aatams:name" type="xsd:string"
                  required="true()"/>
         <xf:bind id="display_level" nodeset="instance('inst_data')//aatams:display_level"
                  type="xsd:string"
                  required="false()"/>
         <xf:bind id="display_start_date"
                  nodeset="instance('inst_data')//aatams:display_start_date"
                  type="xsd:dateTime"
                  required="false()"/>
         <xf:bind id="comments" nodeset="instance('inst_data')//aatams:comments"
                  type="xsd:string"
                  required="false()"/>
         <xf:bind id="error_message" nodeset="instance('inst_response')//ServiceException"
                  type="xsd:string"/>
         <xf:bind id="success_message" nodeset="instance('inst_response')//ogc:FeatureId/@fid"
                  type="xsd:string"/>
         <xf:submission id="s01" ref="instance('inst_data')" method="post"
                        action="../../deegree-wfs/services"
                        replace="instance"
                        instance="inst_response">
            <xf:action ev:event="xforms-submit">
               <xf:delete nodeset="instance('inst_data')//aatams:display_level_id[.='']"/>
               <xf:delete nodeset="instance('inst_data')//aatams:display_start_date[.='']"/>
               <xf:insert nodeset="instance('inst_data')//aatams:classification_ref/aatams:classification"
                          origin="instance('inst_classification')//aatams:classification[@gml:id=instance('inst_subfeatures')/classification_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:classification_ref/aatams:classification"
                          at="1"/>
            </xf:action>
            <xf:message level="modeless" ev:event="xforms-submit-error">
									Submit error.
								</xf:message>
         </xf:submission>
         <xf:dispatch ev:event="xforms-ready" name="set-selected" target="model1"/>
         <xf:action ev:event="set-selected">
            <xf:setvalue ref="instance('inst_subfeatures')//classification_id"
                         value="instance('inst_classification')//aatams:classification[1]/@gml:id"/>
            <xf:dispatch name="xforms-revalidate" target="model1"/>
         </xf:action>
      </xf:model>
   </head>
   <body><!--Debug--><div class="form">
         <legend>ADD ANIMAL</legend>
         <div class="form-contents">
            <xf:select1 bind="classification" appearance="minimal" incremental="true()">
               <xf:label>Classification</xf:label>
               <xf:itemset nodeset="instance('inst_classification')//aatams:classification">
                  <xf:value ref="@gml:id"/>
                  <xf:label ref="aatams:name"/>
               </xf:itemset>
            </xf:select1>
            <xf:input bind="name" incremental="true()">
               <xf:label>Name</xf:label>
            </xf:input>
            <xf:input bind="display_level" incremental="true()">
               <xf:label>Display Level</xf:label>
            </xf:input>
            <xf:input bind="display_start_date" incremental="true()">
               <xf:label>Display Start Date</xf:label>
            </xf:input>
            <xf:textarea bind="comments">
               <xf:label>Comments</xf:label>
            </xf:textarea>
            <xf:submit submission="s01">
               <xf:label>Save</xf:label>
            </xf:submit>
            <xf:trigger>
               <xf:label>Reset</xf:label>
               <xf:reset ev:event="DOMActivate"/>
               <xf:dispatch ev:event="DOMActivate" name="set-selected" target="model1"/>
               <xf:delete ev:event="DOMActivate" nodeset="instance('inst_response')//ServiceException"/>
               <xf:delete ev:event="DOMActivate" nodeset="instance('inst_response')//ogc:FeatureId/@fid"/>
            </xf:trigger>
            <xf:group>
               <xf:output bind="error_message" class="error">
                  <xf:label>Error:</xf:label>
               </xf:output>
               <xf:output bind="success_message">
                  <xf:label>New Record Id:</xf:label>
               </xf:output>
            </xf:group>
         </div>
      </div>
      <br/>
      <div id="console"/>
   </body>
</html>