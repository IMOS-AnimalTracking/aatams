<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?><html xmlns:aatams="http://www.imos.org.au/aatams"
      xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:wfs="http://www.opengis.net/wfs"
      xmlns:ogc="http://www.opengis.net/ogc"
      xmlns:ows="http://www.opengis.net/ows"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:gml="http://www.opengis.net/gml">
   <head>
      <title>Australian Acoustic Tagging and Monitoring System (AATAMS)</title>
      <link href="aatams.css" rel="stylesheet" type="text/css"/>
      <xf:model id="model1">
         <xf:instance id="inst_data">
            <wfs:Transaction version="1.1.0" service="WFS">
               <wfs:Insert>
                  <wfs:FeatureCollection>
                     <gml:featureMember>
                        <aatams:surgery_person>
                           <aatams:surgery_ref>
                              <aatams:surgery/>
                           </aatams:surgery_ref>
                           <aatams:person_ref>
                              <aatams:person/>
                           </aatams:person_ref>
                        </aatams:surgery_person>
                     </gml:featureMember>
                  </wfs:FeatureCollection>
               </wfs:Insert>
            </wfs:Transaction>
         </xf:instance>
         <xf:instance id="inst_subfeatures">
            <data xmlns="">
               <person_id/>
               <surgery_id/>
            </data>
         </xf:instance>
         <xf:instance id="inst_person"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:person"/>
         <xf:instance id="inst_surgery"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:surgery"/>
         <xf:instance id="inst_response">
            <dummy xmlns="">
               <ows:Exception/>
               <wfs:TransactionResponse>
                  <wfs:InsertResults>
                     <wfs:Feature>
                        <ogc:FeatureId/>
                     </wfs:Feature>
                  </wfs:InsertResults>
               </wfs:TransactionResponse>
            </dummy>
         </xf:instance>
         <xf:bind id="surgery" nodeset="instance('inst_subfeatures')/surgery_id"
                  type="xsd:string"
                  required="true()"/>
         <xf:bind id="person" nodeset="instance('inst_subfeatures')/person_id" type="xsd:string"
                  required="true()"/>
         <xf:bind id="error_message" nodeset="instance('inst_response')//ServiceException"
                  calculate="choose(contains(.,'Equal feature'),substring-after(.,'. '),.)"
                  type="xsd:string"/>
         <xf:bind id="success_message" nodeset="instance('inst_response')//ogc:FeatureId/@fid"
                  type="xsd:string"/>
         <xf:submission id="s01" ref="instance('inst_data')" method="post"
                        action="../../deegree-wfs/services"
                        replace="instance"
                        instance="inst_response">
            <xf:action ev:event="xforms-submit">
               <xf:insert nodeset="instance('inst_data')//aatams:person_ref/aatams:person"
                          origin="instance('inst_person')/gml:featureMember/aatams:person[@gml:id=instance('inst_subfeatures')/person_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:person_ref/aatams:person" at="1"/>
               <xf:insert nodeset="instance('inst_data')//aatams:surgery_ref/aatams:surgery"
                          origin="instance('inst_surgery')/gml:featureMember/aatams:surgery[@gml:id=instance('inst_subfeatures')/surgery_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:surgery_ref/aatams:surgery" at="1"/>
            </xf:action>
            <xf:message level="modeless" ev:event="xforms-submit-error">
									Submit error.
								</xf:message>
         </xf:submission>
         <xf:dispatch ev:event="xforms-ready" name="set-selected" target="model1"/>
         <xf:action ev:event="set-selected">
            <xf:setvalue ref="instance('inst_subfeatures')/person_id"
                         value="instance('inst_person')/gml:featureMember/aatams:person[1]/@gml:id"/>
            <xf:setvalue ref="instance('inst_subfeatures')/surgery_id"
                         value="instance('inst_surgery')/gml:featureMember/aatams:surgery[1]/@gml:id"/>
            <xf:dispatch name="xforms-revalidate" target="model1"/>
         </xf:action>
      </xf:model>
   </head>
   <body>
      <div class="form">
         <label>ADD SURGERY PERSON</label>
         <div class="form-contents">
            <div class="xfselect1">
               <xf:select1 bind="surgery" appearance="minimal" incremental="true()">
                  <xf:label>Surgery</xf:label>
                  <xf:itemset nodeset="instance('inst_surgery')/gml:featureMember/aatams:surgery">
                     <xf:value ref="@gml:id"/>
                     <xf:label ref="aatams:name"/>
                  </xf:itemset>
               </xf:select1>
            </div>
            <div class="xfselect1">
               <xf:select1 bind="person" appearance="minimal" incremental="true()">
                  <xf:label>Person</xf:label>
                  <xf:itemset nodeset="instance('inst_person')/gml:featureMember/aatams:person">
                     <xf:value ref="@gml:id"/>
                     <xf:label ref="aatams:name"/>
                  </xf:itemset>
               </xf:select1>
            </div>
            <div class="buttons">
               <div class="xfsubmit">
                  <xf:submit submission="s01">
                     <xf:label>Save</xf:label>
                  </xf:submit>
               </div>
               <div class="xftrigger" style="clear:none;">
                  <xf:trigger>
                     <xf:label>Reset</xf:label>
                     <xf:reset ev:event="DOMActivate"/>
                     <xf:dispatch ev:event="DOMActivate" name="set-selected" target="model1"/>
                     <xf:delete ev:event="DOMActivate" nodeset="instance('inst_response')//ServiceException"/>
                     <xf:delete ev:event="DOMActivate" nodeset="instance('inst_response')//ogc:FeatureId/@fid"/>
                  </xf:trigger>
               </div>
            </div>
            <div id="messages">
               <div id="error-message">
                  <xf:output bind="error_message">
                     <xf:label>Error:</xf:label>
                  </xf:output>
               </div>
               <div id="success-message">
                  <xf:output bind="success_message">
                     <xf:label>New Record Id:</xf:label>
                  </xf:output>
               </div>
            </div>
         </div>
      </div>
      <br/>
      <div id="console"/>
   </body>
</html>