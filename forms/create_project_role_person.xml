<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?><html xmlns:aatams="http://www.imos.org.au/aatams"
      xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:ev="http://www.w3.org/2001/xml-events"
      xmlns:wfs="http://www.opengis.net/wfs"
      xmlns:ogc="http://www.opengis.net/ogc"
      xmlns:ows="http://www.opengis.net/ows"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:gml="http://www.opengis.net/gml">
   <head>
      <title>AATAMS Web Interface</title>
      <link href="aatams.css" rel="stylesheet" type="text/css"/>
      <script type="text/javascript" src="aatams_xforms.js" charset="UTF-8"/>
      <xf:model id="model1">
         <xf:instance id="inst_data">
            <wfs:Transaction version="1.1.0" service="WFS">
               <wfs:Insert>
                  <wfs:FeatureCollection>
                     <gml:featureMember>
                        <aatams:project_role_person>
                           <aatams:project_ref>
                              <aatams:project/>
                           </aatams:project_ref>
                           <aatams:role_ref>
                              <aatams:role/>
                           </aatams:role_ref>
                           <aatams:person_ref>
                              <aatams:person/>
                           </aatams:person_ref>
                        </aatams:project_role_person>
                     </gml:featureMember>
                  </wfs:FeatureCollection>
               </wfs:Insert>
            </wfs:Transaction>
         </xf:instance>
         <xf:instance id="inst_subfeatures">
            <data xmlns="">
               <person_id/>
               <project_id/>
               <role_id/>
            </data>
         </xf:instance>
         <xf:instance id="inst_person"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:person"/>
         <xf:instance id="inst_project"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:project"/>
         <xf:instance id="inst_role"
                      src="../../deegree-wfs/services?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;namespace=xmlns(aatams=http://www.imos.org.au/aatams)&amp;typename=aatams:role"/>
         <xf:instance id="inst_response">
            <dummy xmlns="">
               <ows:Exception/>
               <wfs:TransactionResponse>
                  <wfs:InsertResults>
                     <wfs:Feature>
                        <ogc:FeatureId/>
                     </wfs:Feature>
                  </wfs:InsertResults>
               </wfs:TransactionResponse>
            </dummy>
         </xf:instance>
         <xf:bind id="project" nodeset="instance('inst_subfeatures')//project_id"
                  type="xsd:string"
                  required="true()"/>
         <xf:bind id="role" nodeset="instance('inst_subfeatures')//role_id" type="xsd:string"
                  required="true()"/>
         <xf:bind id="person" nodeset="instance('inst_subfeatures')//person_id" type="xsd:string"
                  required="true()"/>
         <xf:bind id="error_message" nodeset="instance('inst_response')//ServiceException"
                  type="xsd:string"/>
         <xf:bind id="success_message" nodeset="instance('inst_response')//ogc:FeatureId/@fid"
                  type="xsd:string"/>
         <xf:submission id="s01" ref="instance('inst_data')" method="post"
                        action="../../deegree-wfs/services"
                        replace="instance"
                        instance="inst_response">
            <xf:action ev:event="xforms-submit">
               <xf:insert nodeset="instance('inst_data')//aatams:person_ref/aatams:person"
                          origin="instance('inst_person')//aatams:person[@gml:id=instance('inst_subfeatures')/person_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:person_ref/aatams:person" at="1"/>
               <xf:insert nodeset="instance('inst_data')//aatams:project_ref/aatams:project"
                          origin="instance('inst_project')//aatams:project[@gml:id=instance('inst_subfeatures')/project_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:project_ref/aatams:project" at="1"/>
               <xf:insert nodeset="instance('inst_data')//aatams:role_ref/aatams:role"
                          origin="instance('inst_role')//aatams:role[@gml:id=instance('inst_subfeatures')/role_id]"/>
               <xf:delete nodeset="instance('inst_data')//aatams:role_ref/aatams:role" at="1"/>
            </xf:action>
            <xf:message level="modeless" ev:event="xforms-submit-error">
									Submit error.
								</xf:message>
         </xf:submission>
         <xf:dispatch ev:event="xforms-ready" name="set-selected" target="model1"/>
         <xf:action ev:event="set-selected">
            <xf:setvalue ref="instance('inst_subfeatures')//person_id"
                         value="instance('inst_person')//aatams:person[1]/@gml:id"/>
            <xf:setvalue ref="instance('inst_subfeatures')//project_id"
                         value="instance('inst_project')//aatams:project[1]/@gml:id"/>
            <xf:setvalue ref="instance('inst_subfeatures')//role_id"
                         value="instance('inst_role')//aatams:role[1]/@gml:id"/>
         </xf:action>
      </xf:model>
   </head>
   <body><!--Debug--><div class="form">
         <legend>ADD PROJECT ROLE PERSON</legend>
         <xf:select1 bind="project" appearance="minimal" incremental="true()">
            <xf:label>Project</xf:label>
            <xf:itemset nodeset="instance('inst_project')//aatams:project">
               <xf:value ref="@gml:id"/>
               <xf:label ref="aatams:name"/>
            </xf:itemset>
         </xf:select1>
         <xf:select1 bind="role" appearance="minimal" incremental="true()">
            <xf:label>Role</xf:label>
            <xf:itemset nodeset="instance('inst_role')//aatams:role">
               <xf:value ref="@gml:id"/>
               <xf:label ref="aatams:name"/>
            </xf:itemset>
         </xf:select1>
         <xf:select1 bind="person" appearance="minimal" incremental="true()">
            <xf:label>Person</xf:label>
            <xf:itemset nodeset="instance('inst_person')//aatams:person">
               <xf:value ref="@gml:id"/>
               <xf:label ref="aatams:name"/>
            </xf:itemset>
         </xf:select1>
         <xf:submit submission="s01">
            <xf:label>Save</xf:label>
         </xf:submit>
         <xf:trigger>
            <xf:label>Reset</xf:label>
            <xf:reset ev:event="DOMActivate"/>
            <xf:dispatch ev:event="DOMActivate" name="set-selected" target="model1"/>
         </xf:trigger>
         <xf:group>
            <xf:output bind="error_message" class="error">
               <xf:label>Error:</xf:label>
            </xf:output>
            <xf:output bind="success_message">
               <xf:label>New Record Id:</xf:label>
            </xf:output>
         </xf:group>
      </div>
      <br/>
      <div id="console"/>
   </body>
</html>