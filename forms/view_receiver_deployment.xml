<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?><html xmlns:aatams="http://www.imos.org.au/aatams" xmlns="http://www.w3.org/1999/xhtml"
      xmlns:xf="http://www.w3.org/2002/xforms"
      xmlns:ev="http://www.w3.org/2001/xml-events">
   <head>
      <title>AATAMS Web Interface</title>
      <link href="aatams.css" rel="stylesheet" type="text/css"/>
      <xf:model>
         <xf:instance id="inst_request">
            <wfs:GetFeature xmlns:wfs="http://www.opengis.net/wfs" xmlns:gml="http://www.opengis.net/gml"
                            xmlns:ogc="http://www.opengis.net/ogc"
                            outputFormat="text/xml; subtype=gml/3.1.1">
               <wfs:Query typeName="pre3:receiver_deployment">
                  <ogc:Filter>
                     <ogc:GmlObjectId gml:id=""/>
                  </ogc:Filter>
               </wfs:Query>
               <aatams:dummy/>
            </wfs:GetFeature>
         </xf:instance>
         <xf:instance id="inst_feature_id">
            <id xmlns="">aatams.receiver_deployment.NNNN</id>
         </xf:instance>
         <xf:bind id="feature_id" nodeset="instance('inst_feature_id')" type="xsd:string"/>
         <xf:instance id="inst_response">
            <wfs:FeatureCollection xmlns:wfs="http://www.opengis.net/wfs" xmlns:gml="http://www.opengis.net/gml">
               <gml:featureMember>
                  <aatams:receiver_deployment/>
               </gml:featureMember>
            </wfs:FeatureCollection>
         </xf:instance>
         <xf:bind id="receiver_device"
                  nodeset="instance('inst_response')//aatams:receiver_device/aatams:name"
                  type="xsd:string"/>
         <xf:bind id="installation"
                  nodeset="instance('inst_response')//aatams:installation/aatams:name"
                  type="xsd:string"/>
         <xf:bind id="station" nodeset="instance('inst_response')//aatams:station/aatams:name"
                  type="xsd:string"/>
         <xf:bind id="project"
                  nodeset="instance('inst_response')//aatams:project_person/aatams:project_name"
                  type="xsd:string"/>
         <xf:bind id="person_role"
                  nodeset="instance('inst_response')//aatams:project_person/aatams:person_name"
                  type="xsd:string"/>
         <xf:bind id="longitude"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:longitude"
                  type="xsd:string"/>
         <xf:bind id="latitude"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:latitude"
                  type="xsd:string"/>
         <xf:bind id="deployment_timestamp"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:deployment_timestamp"
                  type="xsd:string"/>
         <xf:bind id="acoustic_release"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:acoustic_release"
                  type="xsd:string"/>
         <xf:bind id="mooring_type"
                  nodeset="instance('inst_response')//aatams:mooring_type/aatams:name"
                  type="xsd:string"/>
         <xf:bind id="bottom_depth"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:bottom_depth"
                  type="xsd:string"/>
         <xf:bind id="comments"
                  nodeset="instance('inst_response')//aatams:receiver_deployment/aatams:comments"
                  type="xsd:string"/>
         <xf:submission id="s01" method="post" action="../../deegree-wfs/services"
                        ref="instance('inst_request')"
                        replace="instance"
                        instance="inst_response">
            <xf:message level="modeless" ev:event="xforms-submit-error">Submit error.</xf:message>
         </xf:submission>
      </xf:model>
   </head>
   <body>
      <fieldset xmlns="">
         <legend>VIEW RECEIVER DEPLOYMENT</legend>
         <table xmlns="http://www.w3.org/1999/xhtml">
            <tbody>
               <tr>
                  <td>
                     <xf:input bind="feature_id">
                        <xf:label>Enter Receiver Deployment Id</xf:label>
                     </xf:input>
                  </td>
                  <td>
                     <xf:trigger>
                        <xf:label>Search</xf:label>
                        <xf:action ev:event="DOMActivate">
                           <xf:setvalue ref="instance('inst_request')//@gml:id" value="instance('inst_feature_id')"/>
                           <xf:send submission="s01"/>
                        </xf:action>
                     </xf:trigger>
                  </td>
               </tr>
            </tbody>
         </table>
         <xf:output bind="receiver_device">
            <xf:label>Receiver Device:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="installation">
            <xf:label>Installation:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="station">
            <xf:label>Station:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="project">
            <xf:label>Project:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="person_role">
            <xf:label>Person(Role):</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="longitude">
            <xf:label>Longitude:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="latitude">
            <xf:label>Latitude:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="deployment_timestamp">
            <xf:label>Deployment Timestamp:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="acoustic_release">
            <xf:label>Acoustic Release:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="mooring_type">
            <xf:label>Mooring Type:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="bottom_depth">
            <xf:label>Bottom Depth:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
         <xf:output bind="comments">
            <xf:label>Comments:</xf:label>
            <xf:help>This is a presently unhelpful help message</xf:help>
         </xf:output>
      </fieldset>
      <br/>
      <div id="console" style="display:none;"/>
   </body>
</html>